{
  "name": "ortb-validation-tool",
  "version": "1.0.0",
  "description": "OpenRTB 2.6 validation and sample generation tool",
  "main": "start.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "start": "node minimal-server.js",
    "build": "node build.js",
    "heroku-postbuild": "node build.js",
    "postinstall": "node build.js",
    "build:backend": "tsc",
    "build:full": "npm run frontend:install && npm run frontend:build && tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/index.ts",
    "api": "ts-node src/api/cli.ts",
    "api:dev": "ts-node --watch src/api/cli.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:api": "vitest src/api/__tests__",
    "test:integration": "vitest src/__tests__/integration --run",
    "test:integration:watch": "vitest src/__tests__/integration",
    "test:e2e": "vitest src/__tests__/integration/end-to-end-scenarios.test.ts --run",
    "test:compliance": "vitest src/__tests__/integration/iab-compliance.test.ts --run",
    "test:all": "vitest --run",
    "demo": "ts-node demo.ts",
    "frontend:install": "cd frontend && npm install",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "dev:full": "concurrently \"npm run api\" \"npm run frontend:dev\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "openrtb",
    "ortb",
    "validation",
    "programmatic",
    "advertising",
    "iab"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1"
  }
}
